<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/emloyeKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сотрудник 1" />

    <EditText
        android:id="@+id/fioEmpoye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="ФИО сотрудника"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/postEmploye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Должность сотрудника"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить" />

    <Button
        android:id="@+id/buttonSelectEmploye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выбор сотрудника" />
</LinearLayout>